@model IEnumerable<MarkMyDoctor.Models.ViewModels.ManageDoctorViewModel>

@{
    ViewData["Title"] = "Orvosok";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div>
        <h1 class="card-header text-center">Orvosok adminisztrációja</h1>
    </div>
    <div class="card-body">
        <a class="btn btn-primary" asp-action="Create" asp-controller="Doctors" >Új orvos hozzáadása</a>
        <table id="doctors" class="table table-striped table-bordered dt-responsive nowrap users-table text-center" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Orvos neve</th>
                    <th>Adatlap szerkesztése</th>
                    <th>Törlés</th>
                </tr>
            </thead>
        </table>
    </div>

    @section Scripts{

        <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
        <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
        <script src="~/js/doctorsDataTable.js"></script>
    }
</div>