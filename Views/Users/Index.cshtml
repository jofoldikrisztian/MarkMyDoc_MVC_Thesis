@model IEnumerable<MarkMyDoctor.Models.ViewModels.UserRolesViewModel>

@{
    ViewData["Title"] = "Felhasználók";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div>
        <h1 class="card-header text-center">Felhasználók</h1>
    </div>
    <div class="card-body">
        <table id="users" class="table table-striped table-bordered dt-responsive nowrap users-table" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Felhasználónév</th>
                    <th>E-mail</th>
                    <th>Telefonszám</th>
                    <th>Szerepkörök</th>
                    <th>Szerepkörök kezelése</th>
                    <th>Szerkesztés</th>
                    <th>Törlés</th>
                </tr>
            </thead>
        </table>
    </div>

    @section Scripts{

        <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
        <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
        <script src="~/js/userDataTable.js"></script>
    }
</div>


