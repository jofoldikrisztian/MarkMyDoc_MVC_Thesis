@model List<ManageUserRolesViewModel>
    @{
        ViewData["Title"] = "Manage";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <form method="post">
        <div class="card">
            <div class="card-header text-center">
                <h2>@ViewBag.UserName szerepköreinek kezelése</h2>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input asp-for="@Model[i].Selected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].Selected">
                            @Model[i].RoleName
                        </label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Mentés" class="btn btn-primary" style="width:auto" />
                <a asp-action="Index" class="btn btn-primary" style="width:auto">Mégse</a>
            </div>
        </div>
    </form>