@model MarkMyDoctor.Models.ViewModels.UnApprovedReviewViewModel

@{
    ViewData["Title"] = "Értékelés jóváhagyása";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header text-center">
        <h4>@Model.UserName értékelésének jóváhagyása</h4>
        <hr />
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Doctor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Doctor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Body)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Body)
            </dd>
        </dl>

    </div>
    <div class="card-footer">
        <form asp-controller="Reviews" asp-action="Approve" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <input type="submit" value="Jóváhagyás" class="btn btn-info" />
            </div>
            <a class="btn btn-primary" asp-controller="Reviews" asp-action="UnApprovedReviews">Vissza a listához</a>
        </form>
    </div>
</div>
