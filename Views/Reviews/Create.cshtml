                </div>
                <span asp-validation-for="Review.EmpathyRating"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.FlexibilityRating" class="control-label"></label>
                <div onmouseout="CreateSelected('Flexibility')">
                    <i id="Flexibility1" onmouseout="CreateOut(1, 'Flexibility')" onmouseover="CreateOver(1, 'Flexibility')" onclick="CreateClick(1, 'Flexibility')" class="far fa-star"></i>
                    <i id="Flexibility2" onmouseout="CreateOut(2, 'Flexibility')" onmouseover="CreateOver(2, 'Flexibility')" onclick="CreateClick(2, 'Flexibility')" class="far fa-star"></i>
